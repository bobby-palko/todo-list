{
  "name": "todo-backend",
  "version": "0.1.0",
  "description": "the backend for my todo web app",
  "author": "Bobby Palko",
  "license": "ISC",
  "main": "dist/index.js",
  "scripts": {
    "start": "node .",
    "build": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/index.js",
    "dev": "concurrently -k -p \"[{name}]\" -n \" TypeScript , Node \" -c \"yello.bold, cyan.bold\" \"npm run watch-ts\" \"npm run watch-node\""
  },
  "dependencies": {
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "mongoose": "^5.13.2"
  },
  "eslintConfig": {
    "extends": "eslint-config-wesbos/typescript.js",
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^16.7.13",
    "eslint-config-wesbos": "^2.0.0-beta.7",
    "typescript": "^4.3.5"
  }
}
